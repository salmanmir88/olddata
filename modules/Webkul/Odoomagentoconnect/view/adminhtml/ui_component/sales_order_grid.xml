<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction">
            <action name="new_action">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="type" xsi:type="string">new_action</item>
                        <item name="label" xsi:type="string" translate="true">Synchronise To Odoo</item>
                        <item name="url" xsi:type="url" path="odoomagentoconnect/order/syncorder"/>
                    </item>
                </argument>
            </action>
            <action name="sync_invoice">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="type" xsi:type="string">sync_invoice</item>
                        <item name="label" xsi:type="string" translate="true">Sync Invoice To Odoo</item>
                        <item name="url" xsi:type="url" path="odoomagentoconnect/order/syncinvoice"/>
                    </item>
                </argument>
            </action>
            <action name="sync_shipment">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="type" xsi:type="string">sync_shipment</item>
                        <item name="label" xsi:type="string" translate="true">Sync Shipment To Odoo</item>
                        <item name="url" xsi:type="url" path="odoomagentoconnect/order/syncshipment"/>
                    </item>
                </argument>
            </action>
        </massaction>
    </listingToolbar>
</listing>