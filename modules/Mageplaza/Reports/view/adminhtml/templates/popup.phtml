<div id="popup-modal">
    <h1> <?= $block->escapeHtml(__('Letâ€™s experience your new dashboard')) ?> </h1>
</div>
<script>
    require(['jquery', 'Magento_Ui/js/modal/modal'], function ($, modal) {
            var options = {
                type: 'popup',
                responsive: true,
                innerScroll: true,
                title: '<?= $block->escapeHtml(__('Hello there! Better reports are available')) ?>',
                buttons: [{
                    text: $.mage.__('Continue'),
                    class: '',
                    click: function () {
                        $.ajax({
                            url: '<?= /** @noEscape */ $block->getUrl('mpreports/dashboard/switchtonew', ['form_key' => $block->getFormKey()]) ?>',
                            data: {switchToNew: 1},
                            success: function (res) {
                                if (res) {
                                    window.location.href = res;
                                }
                            }
                        });
                        this.closeModal();
                    }
                }]
            };
            var popup = $('#popup-modal');
            modal(options, popup);
            popup.modal('openModal');
            popup.on('modalclosed', function () {
                $.ajax({
                    url: '<?= /** @noEscape */ $block->getUrl('mpreports/dashboard/switchtonew', ['form_key' => $block->getFormKey()]) ?>',
                    data: {firstTimeInstall: 1}
                })
            });
        }
    );
</script>
