<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Amasty_Affiliate::css/default.css"/>
    </head>
    <body>
        <referenceBlock name="footer_links">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="amasty-affiliate-program-footer" ifconfig="amasty_affiliate/general/link_to_footer">
                <arguments>
                    <argument name="label" xsi:type="string">The Affiliate Program</argument>
                    <argument name="path" xsi:type="string">amasty-affiliate-program</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
